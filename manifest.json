{
    "manifest_version": 2,
    "name": "ToDo",
    "version": "1.1.1",
    "description": "Simple extension for task management",
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/19.png",
            "38": "images/38.png"
        },
        "default_popup": "index.html",
        "default_title": "To Do"
    },
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "update_url": "https://lvxianchao.github.io/updates.xml"
}